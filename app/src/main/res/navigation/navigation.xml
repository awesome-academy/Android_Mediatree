<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.truongdc21.mediatree.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_listSongFragment"
            app:destination="@id/listSongFragment" >
        </action>
        <action
            android:id="@+id/action_homeFragment_to_mediaPlayBottomSheetFragment"
            app:destination="@id/mediaPlayBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.truongdc21.mediatree.ui.fragment.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.truongdc21.mediatree.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.truongdc21.mediatree.ui.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/listSongFragment"
        android:name="com.truongdc21.mediatree.ui.fragment.ListSongFragment"
        android:label="fragment_list_song"
        tools:layout="@layout/fragment_list_song" >
        <action
            android:id="@+id/action_listSongFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/listSongFragment"
            app:popUpToInclusive="true"
            />
        <argument android:name="currentArtists"
            app:argType="com.truongdc21.mediatree.data.model.Artists"
            app:nullable="true" />
        <argument
            android:name="currentPlaylist"
            app:argType="com.truongdc21.mediatree.data.model.Playlist"
            app:nullable="true" />
        <action
            android:id="@+id/action_listSongFragment_to_mediaPlayBottomSheetFragment"
            app:destination="@id/mediaPlayBottomSheetFragment" />
    </fragment>
    <dialog
        android:id="@+id/mediaPlayBottomSheetFragment"
        android:name="com.truongdc21.mediatree.ui.fragment.MediaPlayBottomSheetFragment"
        android:label="MediaPlayBottomSheetFragment" />
</navigation>
